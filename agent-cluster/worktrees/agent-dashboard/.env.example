# 飞书通知配置
# =============

# 飞书机器人 Webhook URL (推荐使用)
# 在飞书群聊中添加机器人后获取
FEISHU_WEBHOOK_URL=https://open.feishu.cn/open-apis/bot/v2/hook/xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx

# 飞书应用配置 (可选，用于发送卡片消息)
# FEISHU_APP_ID=cli_xxxxxxxxxxxxxx
# FEISHU_APP_SECRET=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# 告警配置
# =============

# 任务超时时间（分钟）
ALERT_TASK_TIMEOUT_MINUTES=30

# 是否启用任务失败告警 (true/false)
ENABLE_TASK_FAILURE_ALERT=true

# 是否启用任务超时告警 (true/false)
ENABLE_TASK_TIMEOUT_ALERT=true

# 是否启用每日汇总报告 (true/false)
ENABLE_DAILY_SUMMARY=true

# 每日汇总发送时间 (UTC 时间，9:00 UTC = 17:00 北京时间)
DAILY_SUMMARY_HOUR=9
DAILY_SUMMARY_MINUTE=0
